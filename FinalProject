# Checks the input pin versus the account pin
def pinSecurity(pin, userPin):
    if pin == userPin:
        return True
    else:
        return False

# Deposits the amount from the user from the account balance
def deposit(num1, num2):
    num2 += num1
    print("Deposit", num1, '\n', "New balance", num2)
    return num2
    
# Does the function
def main():
    # Example pin to access the user's account detail
